{
    "__comment__": "Configuration options starting with '__' are disabled",
    "__comment__": "To enable them, remove the preceding '__'",

    "mainAddress": "localhost:27017",
    "oplogFile": "/var/log/mongo-connector/oplog.timestamp",
    "noDump": false,
    "batchSize": -1,
    "verbosity": 0,
    "continueOnError": true,

    "logging": {
        "type": "file",
        "filename": "/var/log/mongo-connector/mongo-connector.log",

        "__type": "syslog",
        "__host": "localhost:512"
    },

    "authentication": {
        "__adminUsername": "username",
        "__password": "password",
        "__passwordFile": null
    },

    "__fields": ["field1", "field2", "field3"],

    "namespaces": {
        "__include": ["db.source1", "db.source2"],
        "__mapping": {
            "db.source1": "db.dest1",
            "db.source2": "db.dest2"
        }
    },

    "docManagers": [
        {
            "docManager": "mongo_connector/doc_managers/elastic_doc_manager.py",
            "targetURL": "localhost:9200",
            "__uniqueKey": "_id",
            "__autoCommitInterval": null
        }
    ]
}
